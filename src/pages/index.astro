---

import GitHub from '../components/icons/GitHub.astro' 
import LinkedIn from '../components/icons/LinkedIn.astro' 
import Mail from '../components/icons/Mail.astro' 

const title = 'Andres Araque - Linktree';
const description = '';
const keywords = 'Andres Araque, Desarrollo Web, Linktree';
---

<head>
  <meta charset="UTF-8" />
  <meta name="description" content={description} />
  <meta name="keywords" content={keywords} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="canonical" href="https://andresaraque.com" />

  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>

  <style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap');

    body{
      font-family: 'Roboto', sans-serif;
      background-color: #000;
      color: #00ff41;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      overflow: hidden;
      position: relative;
    }

    .background {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: #000;
      overflow: hidden;
    }

    .background::before{
      content: '';
      position: absolute;
      width: 100%;
      height: 100%;
      background: url('https://media1.giphy.com/media/v1.Y2lkPTc5MGI3NjExZm1jdmNkemkwZjY5ZnY4N213bWIzMG5wbGJxOGxwMWFlZnozMDVubiZlcD12MV9pbnRlcm5hbF9naWZfYnlfaWQmY3Q9Zw/Q9aBxHn9fTqKs/giphy.webp') repeat;
      opacity: 0.3;
      animation: moveBackground 10s linear infinite;
    }

    @keyframes moveBackground{
      from {
        background-position: 0 0;
      }
      to{
        background-position: 0 100%;
      }      
    }

    .container{
      text-align: center;
      background-color: rgba(0, 0, 0, .8);
      padding: 40px;
      border-radius: 20px;
      box-shadow: 0 0 40px #00ff41;
      position: relative;
      z-index: 1;
    }

    .profile {
      position: relative;
      margin-bottom: 30px;
    }

    .profile-img{
      width: 120px;
      border-radius: 50px;
      border: 4px solid #00ff41;
      transition: transform 0.3s, box-shadow 0.3s;
      box-shadow: 0 0 20px #00ff41, 0 0 60px #00ff41;
    }

    .profile-img:hover{
      transform: scale(1.1);
      box-shadow: 0 0 30px #00ff41, 0 0 80px #00ff41;
    }

    h1{
      font-size: 32px;
      margin: 10px 0;
      color: #00ff41;
      text-shadow: 0 0 10px #00ff41, 0 0 20px #00ff41;
    }

    p{
      color:#00b33c;
      margin-bottom: 20px;
      text-shadow: 0 0 10px #00ff41;
    }

    .links a {
      display: block;
      background-color: #00ff41;
      color: #000;
      padding: 15px;
      margin: 15px 0;
      border-radius: 12px;
      text-decoration: none;
      font-weight: bold;
      font-size: bold;
      box-shadow: 0 0 10px #00ff41;
      transition: background-color .3s, transform .3s, box-shadow .3s;
      animation: neonGlow 1.5s ease-in-out infinite alternate;
    }

    @keyframes neonGlow {
      from{
        box-shadow: 0 0 10px #00ff41;
      }
      to{
        box-shadow: 0 0 20px #00ff41, 0 0 40px #00ff41;
      }
    }

    .links a:hover{
      background-color: #093;
      transform: scale(1.05);
      box-shadow: 0 0 30px #00ff41, 0 0 60px #00ff41;
    }

    .links a:active{
      transform: scale(.98);
    }
  </style>
</head>

<body>
  <div class="background"></div>
  
  <div class="container">
    <div class="profile">
      <img src="../../public/formal.webp" alt="Profile Image" class="profile-img">
      <div class="profile-scan"></div>
      <h1>Andres Araque</h1>
      <p>Backend Developer</p>
    </div>

    <div class="links">
      <a href="https://github.com/Mono-A3" target="_blank"><GitHub/></a>
      <a href="https://www.linkedin.com/in/araque-andres/" target="_blank"><LinkedIn/></a>
      <a href=""><Mail/></a>
    </div>
  </div>
</body>